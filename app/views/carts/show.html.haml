.index_style
  .h1= t('h1.cart')
  %table.table.table-hover
    %thead
      %tr
        %th= t('product.name')
        %th= t('product.description')
        %th= t('product.price')
    %tbody
      - @products_in_cart.each do |product|
        %tr
          %td= product.name
          %td= product.description
          %td= product.price
  %br
  .links
    = link_to t('buttons.button_go_product_list'), products_path, class: 'btn btn-default'
%form.form-inline
  %br
  .form-group
    %label{:for => "exampleInputEmail2"} Email
  %br
    %input#exampleInputEmail2.form-control{:placeholder => "test@example.com", :type => "email"}
  %br
  %button.btn.btn-default{:type => "submit"} Confirm order


