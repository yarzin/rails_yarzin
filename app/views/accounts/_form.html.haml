.all_file
= form_for @account, :html => {:class => 'form-horizontal center'}  do |f|
  - if @account.errors.any?
    #error_explanation
      %h2
        = pluralize(@account.errors.count, "error")
        prohibited this account from being saved:
      %ul
        - @account.errors.full_messages.each do |message|
          %li= message

  %fieldset
  %legend= t('h1.account_details')

  .field
    = f.label :name, t('account.name')
    = f.text_field :name, size: 30
    %br/
  .field
    = f.label :age, t('account.age')
    = f.number_field :age, size: 30
  .actions
    = f.submit
