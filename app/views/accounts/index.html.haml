%p#notice= notice
%h1 Listing Accounts
%table
  %thead
    %tr
      %th Name
      %th Age
      %th{:colspan => "3"}
  %tbody
    - @accounts.each do |account|
      %tr
        %td= account.name
        %td= account.age
        %td= button_to 'Show', account
        %td= button_to 'Edit', edit_account_path(account)
        %td= button_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' }
%br/
.links= link_to 'New Account', new_account_path
